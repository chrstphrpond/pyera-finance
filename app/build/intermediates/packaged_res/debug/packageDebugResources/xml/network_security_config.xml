<?xml version="1.0" encoding="utf-8"?>
<!-- Security: Explicit network security configuration -->
<network-security-config>
    <!-- Disallow cleartext (HTTP) traffic for all domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
